{
  "name": "missionlog",
  "version": "1.5.0",
  "description": "ðŸš€ lightweight logger â€¢ level based filtering and tagging â€¢ weighs in at 500 bytes",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "tsconfig.json",
    "src/index.ts",
    "tests/log.test.ts"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir . --extensions \".ts\"",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "tsc --noEmit && eslint 'src/*.ts' --fix",
    "release": "standard-version",
    "test": "jest ./tests/*.test.ts"
  },
  "homepage": "https://github.com/rmartone/missionlog#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rmartone/missionlog"
  },
  "keywords": [
    "log",
    "logger",
    "logging",
    "browser",
    "node",
    "mobile",
    "front-end",
    "backend",
    "isomorphic",
    "typescript",
    "minimal"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "author": "Ray Martone <rmartone@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.6.0",
    "core-js": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.6.0",
    "@babel/core": "7.6.0",
    "@babel/generator": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "7.6.0",
    "@babel/preset-typescript": "7.6.0",
    "@babel/register": "^7.6.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-const-enum": "^0.0.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-ts-optchain": "^1.1.5",
    "coveralls": "^3.0.6",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "ts-optchain": "^0.1.8",
    "typescript": "^3.6.3"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false
        }
      ]
    }
  },
  "babel": {
    "comments": false,
    "minified": true,
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3,
          "targets": {
            "browsers": [
              ">1%",
              "last 2 versions",
              "not ie < 11",
              "not dead"
            ],
            "node": "8"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread",
      [
        "const-enum",
        {
          "transform": "constObject"
        }
      ],
      "@babel/plugin-transform-runtime"
    ]
  }
}
