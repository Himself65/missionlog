{
  "name": "missionlog",
  "version": "1.6.7",
  "description": "ðŸš€ lightweight logger â€¢ level based filtering and tagging â€¢ weighs in at 500 bytes",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "tsconfig.json",
    "src/index.ts",
    "tests/log.test.ts"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir . --extensions \".ts\"",
    "coverage": "jest --coverage && coveralls < coverage/lcov.info",
    "lint": "tsc --noEmit && eslint 'src/*.ts' --fix",
    "release": "standard-version",
    "test": "jest ./tests/*.test.ts"
  },
  "homepage": "https://github.com/rmartone/missionlog#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rmartone/missionlog"
  },
  "keywords": [
    "log",
    "logger",
    "logging",
    "browser",
    "node",
    "mobile",
    "front-end",
    "backend",
    "isomorphic",
    "typescript",
    "minimal"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "author": "Ray Martone <rmartone@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.12",
    "core-js": "^3.12.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/generator": "^7.14.1",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-numeric-separator": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.16",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-jest": "^26.1",
    "babel-plugin-const-enum": "^1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-ts-optchain": "^1.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.3.0",
    "ts-optchain": "^0.1.8",
    "typescript": "4.2.4"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false
        }
      ]
    }
  },
  "babel": {
    "comments": false,
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3,
          "targets": {
            "browsers": [
              ">1%",
              "last 2 versions",
              "not ie < 11",
              "not dead"
            ],
            "node": "8"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread",
      [
        "const-enum",
        {
          "transform": "constObject"
        }
      ],
      "@babel/plugin-transform-runtime"
    ]
  }
}
